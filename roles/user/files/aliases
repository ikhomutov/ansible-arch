# System aliases
alias less='less -N'
alias mount='mount | column -t'
alias df='df -hT --total'

# Django aliases
alias dj='python manage.py'
alias djrs='python manage.py runserver'
alias djrsp='python manage.py runserver_plus'
alias djrf='python manage.py runfcgi'
alias djm='python manage.py migrate'
alias djsmi='python manage.py showmigrations'
alias djmmi='python manage.py makemigrations'
alias djmme='python manage.py makemessages'
alias djds='python manage.py dbshell'
alias djs='python manage.py shell'
alias djsp='python manage.py shell_plus'
alias djt='python manage.py test'
alias djcsu='python manage.py createsuperuser'
alias djcct='python manage.py createcachetable'
alias djcs='python manage.py collectstatic'

# Main config files
alias e='$EDITOR'
alias ev='$EDITOR ~/.vimrc'
alias ez='$EDITOR ~/.zshrc'
alias ea='$EDITOR ~/.aliases'
alias en='$EDITOR ~/.config/nvim/init.vim'
alias ei='$EDITOR ~/.config/i3/config'
alias et='$EDITOR ~/.config/termite/config'
alias es='$EDITOR ~/.config/sxhkd/sxhkdrc'
